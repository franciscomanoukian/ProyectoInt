<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logocropeado.png" />
	
	<title> Not Chanclas</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="../stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="../stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<%- include("./partials/headerNoLogueado") %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/bannerCROP.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i=0; i<4 ; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
			
				<section class="product-box">
					<a href="/producto/detalle/id/<%=lista[i].id%>"> <!-- Esta ruta masomenos anda. Lleva a app js y de ahi se ejecuta la ruta /producto AAAAAAAAAAAERAREATRYDFUYIWDGQDOUYHWQODIUHWQOIDUHQWOIUDHOQWIUDHOIQWUDHOQIWUDHQKSHGAKSHJDGASKJ -->
						<figure class="product-box_image">
							<img src="<%=lista[i].imagen%>" alt="<%=lista[i].nombre%>">
						</figure>
						<article class="product-box_data">
							<h2><%=lista[i].nombre%></h2>
							<p><%=lista[i].descripcion%></p>
							<p>Comentarios: !!!!!</p> 
						</article>
					</a>
				</section>
				
			</div>
			<%}%>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i=4; i<8; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
				
					<section class="product-box">
						<a href="/producto/detalle/id/<%=lista[i].id%>"> <!-- Esta ruta masomenos anda. Lleva a app js y de ahi se ejecuta la ruta /producto AAAAAAAAAAAERAREATRYDFUYIWDGQDOUYHWQODIUHWQOIDUHQWOIUDHOQWIUDHOIQWUDHOQIWUDHQKSHGAKSHJDGASKJ -->
							<figure class="product-box_image">
								<img src="<%=lista[i].imagen%>" alt="<%=lista[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%=lista[i].nombre%></h2>
								<p><%=lista[i].descripcion%></p>
								<p>Comentarios: !!!!!</p> 
							</article>
						</a>
					</section>
					
				</div>
				<%}%>
			
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>