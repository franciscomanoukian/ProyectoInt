<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) {%>
		<%- include("./partials/headerLogueado") %> 
	<% } else {%>
		<%- include("./partials/headerNoLogueado") %>
	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/banner-nuevo2.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Últimos cargados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i=0; i<4 ; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
			
				<section class="product-box">
					<a href="/producto/detalle/id/<%=lista[i].id%>"> <!-- Esta ruta masomenos anda. Lleva a app js y de ahi se ejecuta la ruta /producto AAAAAAAAAAAERAREATRYDFUYIWDGQDOUYHWQODIUHWQOIDUHQWOIUDHOQWIUDHOIQWUDHOQIWUDHQKSHGAKSHJDGASKJ -->
						<figure class="product-box_image">
							<img src="<%=lista[i].imagen%>" alt="<%=lista[i].nombre%>">
						</figure>
						<article class="product-box_data">
							<h2><%=lista[i].nombre%></h2>
							<a class="link-profile" href="/perfil/id/<%=lista[i].usuario.id%>"><%=lista[i].usuario.nombre%></a>
							<p><%=lista[i].descripcion%></p>
							<p>Comentarios: <%=lista[i].comentarios.length%></p> 
						</article>
					</a>
				</section>
				
			</div>
			<%}%>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Nuestra selección</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i=4; i<8; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
				
					<section class="product-box">
						<a href="/producto/detalle/id/<%=lista[i].id%>"> <!-- Esta ruta masomenos anda. Lleva a app js y de ahi se ejecuta la ruta /producto AAAAAAAAAAAERAREATRYDFUYIWDGQDOUYHWQODIUHWQOIDUHQWOIUDHOQWIUDHOIQWUDHOQIWUDHQKSHGAKSHJDGASKJ -->
							<figure class="product-box_image">
								<img src="<%=lista[i].imagen%>" alt="<%=lista[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%=lista[i].nombre%></h2>
								<a class="link-profile" href="/perfil/id/<%=lista[i].usuario.id%>"><%=lista[i].usuario.nombre%></a>
								<p><%=lista[i].descripcion%></p>
								<p>Comentarios: <%=lista[i].comentarios.length%></p> 
							</article>
						</a>
					</section>
					
				</div>
				<%}%>
			
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>