<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) {%>
		<%- include("./partials/headerLogueado") %> 
	<% } else {%>
		<%- include("./partials/headerNoLogueado") %>
	<% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= datosUsuario.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=  datosUsuario.nombre %> 
						<p><%=  datosUsuario.email %></p>
						<!-- IF: El usuario que esta en sesion es el que se esta mostrando, mostramos boton EDITAR PERFIL -->
						<% if (locals.user == undefined) {%>
							 
						<% } else if (locals.user.id == datosUsuario.id) {%>
							<a href="/perfil/editar"> <!-- aca no se porq decia profile-edit.html -->
								<i class="fas fa-cog"></i>
							</a> 
						<% } %>
						
					</h1>
					<!-- IF: El usuario que esta en sesion es distinto al usuario que se esta mostrando, mostramos boton seguir -->
					<% if (locals.user == undefined) {%>
							 
						<% } else if (locals.user.id != datosUsuario.id) {%>
							<form class="form" action="/perfil/seguir" method="POST"> 
								<button type="submit" class="btn mt-3 ml-4" class="botonseguir">SEGUIR</button> 
								<input class="form-input" name="seguir" type="hidden" value="<%= datosUsuario.id%>" placeholder="">
							</form>

					<% } %>

				</div>
				<div>
					<ul class="">
						<li><%=lista.length%> productos</li>
						<li>X seguidores</li>
						<li>X comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if (locals.user == undefined) {%>
					<h2 class="products-title">Productos de <%=  datosUsuario.nombre %></h2>
				<% } else if (locals.user.id == datosUsuario.id) {%>
					<h2 class="products-title">Mis productos</h2>
				<% } else { %>
					<h2 class="products-title">Productos de <%=  datosUsuario.nombre %></h2>
				<% } %>
			</div>
			<!-- Show mis productos -->
			<%for (let i=0; i<lista.length; i++){ %>
				<div class="col-12 col-sm-6 col-lg-3">
				
					<section class="product-box">
						<a href="/producto/detalle/id/<%=lista[i].id%>"> 
							<figure class="product-box_image">
								<img src="<%=lista[i].imagen%>" alt="<%=lista[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%=lista[i].nombre%></h2>
								<p><%=lista[i].descripcion%></p>
							</article>
						</a>
					</section>
				</div>
			<%}%>
			</div>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>