<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) {%>
		<%- include("./partials/headerLogueado") %> 
	<% } else {%>
		<%- include("./partials/headerNoLogueado") %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar productos</h2>
				<button type="submit" class ="addproductbutton" > <a href="/"> CANCELAR </a> </button>
			</div>
			<!-- Show the "ultimos" products -->
			
			<form action="/producto/guardarCambios" method="POST" class="agregarproductoform"> <!-- aca antes decia login.html -->
				<label class="textproduct">IMAGEN</label><input  name="imagen" type="text" placeholder="FOTO DE PRODUCTO" class="inputproduct" value="<%= datosProducto.imagen%>">
				<label class="textproduct" >NOMBRE DE PRODUCTO</label><input name="nombre" type="text" placeholder="NOMBRE PRODUCTO" class="inputproduct" value="<%= datosProducto.nombre%>">
				<label class="textproduct" >DESCRIPCION</label><input name="descripcion" type="text" placeholder="DESCRIPCION PRODUCTO" class="inputproduct" value="<%= datosProducto.descripcion%>">
				<input name="id_producto" type="hidden" value="<%= datosProducto.id%>">
				<button type="submit" class ="addproductbutton"> GUARDAR CAMBIOS </button>
			</form>

			

			<img src="/images/greenvans.jpeg" class ="fotoregistro2">


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>